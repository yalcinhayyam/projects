<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Adı"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDetailPages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200 sayfa"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvDetailStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durum: Mevcut"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvDetailBorrower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ödünç alan: Ahmet"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ödünç Ver"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İade Al"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnManageUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Yönetimi"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_dark" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitabı Sil"
                android:backgroundTint="@android:color/holo_red_dark" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
